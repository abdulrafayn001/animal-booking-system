<!-- Main view file -->

<h1 class="page-title">All Bookings</h1>

<div class="table-container">
  <table class="bookings-table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Animal Name</th>
        <th>Animal Type</th>
        <th>Hours Requested</th>
        <th>Date of Service</th>
        <th>Total Cost</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'booking_row', collection: @bookings, as: :booking %>
    </tbody>
  </table>
</div>
